<footer class="footer mt-5 h-auto text-base text-third-text-color relative border-t-2 border-t-border-color">
    <div class="info-container text-center" style="padding: 16px 0;">
        <div class="text-center">
            <% if (theme.footer.hasOwnProperty('statistics') && theme.footer.statistics) {%>
                <% const sitePostsCount=site.posts.length; let siteWordCount=null; try{ siteWordCount=totalcount(site);
                    } catch (e) { siteWordCount=null; } %>
                    <p class="post-count space-x-0.5">
                        <span>
                            <%- __("site_posts", sitePostsCount) %>
                        </span>
                        <% if (siteWordCount) {%>
                            <span>
                                <%- __("site_wordcount", siteWordCount) %>
                            </span>
                            <% } %>
                    </p>
                    <% } %>
                        <% if (theme.footer.runtime===true) {%>
                            <div>
                                <%= __('runtime') %> <span class="odometer" id="runtime_days"></span>
                                    <%= __('days') %> <span class="odometer" id="runtime_hours"></span>
                                        <%= __('hours') %> <span class="odometer" id="runtime_minutes"></span>
                                            <%= __('minutes') %> <span class="odometer" id="runtime_seconds"></span>
                                                <%= __('seconds') %>
                            </div>
                            <% } %>
                                <% if (theme.footer.runtime===true) {%>
                                    <script <%=theme.global.single_page===true && 'data-swup-reload-script' %>>
                try {
                                            function odometer_init() {
                                                const elements = document.querySelectorAll('.odometer');
                                                elements.forEach(el => {
                                                    new Odometer({
                                                        el,
                                                        format: '( ddd).dd',
                                                        duration: 200
                                                    });
                                                });
                                            }
                                            odometer_init();
                                        } catch (error) { }
                                    </script>
                                    <% } %>
        </div>

        <div style="line-height:1.2; margin-top: 8px;">
            Powered by Hexo & Hexo Theme Redefine
        </div>
        <div style="line-height:1.2; margin-top: 8px;">
            &copy; <%= date(new Date(), 'YYYY' ) %> <a href="/"> 符文档案 Rune Archive</a> | Community-created content
        </div>
        <div style="margin-top: 8px;line-height:1.2;">
            非官方玩家项目，与 Riftbound 官方无关。
            All trademarks and copyrights are property of their respective owners.
        </div>
    </div>
</footer>